<form method="post" id="customerform">

<h2> Login as Customer</h2>
<input type="hidden" value="User" name="type">
 <label>
    <p class="label-txt">ENTER YOUR EMAIL</p>

  <input type="email" name="email" class="input"  required>
    <div class="line-box">
      <div class="line"></div>
    </div>
  </label>
 
  
  <label>
    <p class="label-txt">ENTER YOUR PASSWORD</p>
    <input type="password" class="input" name="password" required>
    <div class="line-box">
      <div class="line"></div>
    </div>
  </label>
   

 <button type="submit">Sign In</button><br><br><p>OR</p>
  <button class="bttn" id="cus">Login as Restaurant</button>
  </form>

<form method="post" id="restaurantform" style="display:none;">
<h2>Restaurant Login</h2>
<input type="hidden" value="Restaurant" name="type">
 <label>
  <label>
    <p class="label-txt">ENTER YOUR EMAIL</p>

  <input type="email" name="email" class="input" required>
    <div class="line-box">
      <div class="line"></div>
    </div>
  </label>
 
  
  <label>
    <p class="label-txt">ENTER YOUR PASSWORD</p>
    <input type="password" class="input" name="password" required>
    <div class="line-box">
      <div class="line"></div>
    </div>
  </label>
   
  <button type="submit">SignIn</button><br><br><p>OR</p>
  <button class="bttn" id="res">Login as Customer</button>
</form>


<script>
$(document).ready(function(){

  $('.input').focus(function(){
    $(this).parent().find(".label-txt").addClass('label-active');
  });

  $(".input").focusout(function(){
    if ($(this).val() == '') {
      $(this).parent().find(".label-txt").removeClass('label-active');
    };
  });
  $("#cus").click(function(){
  $("#restaurantform").css("display", "block");
  $("#customerform").css("display", "none");
  
});
  $("#res").click(function(){
  $("#restaurantform").css("display", "none");
  $("#customerform").css("display", "block");
  
});

});
</script>
</body>
</html>